#!/bin/bash                                                        
<% @env.each do |name,value| %>                                    
export <%=name%>=<%=value %>                       
<%end%>                                                 
                                                                   
<%if @app.migration_command %>                                     
cd <%= @app.target_path %> && <%=@app.migration_command %>         
<%end%>                                                            
                                                                   
<% if not @app.postdeploy_script.nil? and                          
      not @app.postdeploy_script.empty? and                        
      ::File.exists?("#{@app.target_path}/#{@app.postdeploy_script}") %>        
cd <%= @app.target_path %> && bash <%=@app.postdeploy_script %>    
<%end%>

exec /usr/bin/runsvdir -P /etc/service 'log: #{ '.' * 395}'        
#exec supervisord -c /etc/supervisord.conf -n 

